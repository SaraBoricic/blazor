@page "/0304ySwitchbBranch"

<PageTitle>Determine integer type</PageTitle>
<h1>Determine integer type</h1>
<br/>
<table>
    
    <tr>
        <td>Argument:</td>
        <td>
            <input style="text-align:right" @bind="x"/>
        </td>
    </tr>
    <tr>
        <td style="text-align:center" colspan="2">
            <button @onclick="Determine">Calculate</button> &nbsp; 
        </td>
    </tr>
    <tr>
        <td>Result:</td>
        <td><pre> @result </pre></td>
    </tr>
 </table>
<br/>

@code {

    private int x = 0;

    private string result;

    private void Determine()
    {
        System.Console.WriteLine("Argument: " + x);
        switch (x%4)
        {
            case 0:
                result = "number is devisible by 4";
                break;
            case 1:
                result = "Number minus one is devisible by 4";
                break;
            case 2:
                result = "number minus two is devisible by 4";
                break;
            case 3:
                int k = x/4;
                result = "Number form is *(4 * " + k + " + 3)";
                break;
            default: //if i is not in the set {0,1,2,3}
                result = "Shou8ld be imposible";
                break;
        }
        System.Console.WriteLine("Result: " + result);
        System.Console.WriteLine();
    }
}
